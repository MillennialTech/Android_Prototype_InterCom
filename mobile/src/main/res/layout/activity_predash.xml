<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_predash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/ggcintercom_background"
    tools:context="com.example.ljean.ggcintercom.Predash">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/Overlaygreen"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imgbtnTab1"
                android:background="@drawable/double_chat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="Predash"/>

            <ImageButton
                android:id="@+id/imgbtnTab2"
                android:background="@drawable/profile_white1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="Profile"/>
            <ImageButton
                android:id="@+id/imgbtnTab3"
                android:background="@drawable/alert"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="Alert"/>
            <ImageButton
                android:id="@+id/imgbtnTab4"
                android:background="@drawable/feedback_icon_white"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="Feedback"/>
            <ImageButton
                android:id="@+id/imgbtnTab5"
                android:background="@drawable/clochette"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageButton
                android:id="@+id/imgbtnTab6"
                android:background="@drawable/shoppingcart"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Overlaywhite"
        >

    </ListView>
    </ScrollView>

</LinearLayout>
